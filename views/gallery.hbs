<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gallery Assignment by Jim Han</title>

    <style>
        h1 {
            margin-top: 2vh;
            text-align: center;
        }

        img {
            height: 360px;
            width: 360px;
            left: 0;
            right: 0;
            margin: 0 auto;
            position: absolute;
        }

        .clsSelection {
            border: none;
            color: #000000;
            height: 50vh;
            left: 100px;
            margin: 0;
            position: absolute;
            text-align: left;
            top: 10vh;
            width: 15%;
        }

        .clsImageName{
            border: none;
            height: 6vh;
            width: 65vh;
            left: 0;
            right: 0;
            margin: 2em auto;
            padding: 1vh;
            position: absolute;
            text-align: center;
            top: 72vh;
        }
    </style>
</head>

<body>
    <form method="post" action="/gallery">
        <h1>Favorite Series</h1>

        <div class="clsSelection">
            {{#each image}}
            <input type="radio" name="rdoImage" id="rdoImage{{.}}" value="{{.}}"><label
                for="rdoImage{{.}}">{{.}}</label><br>
            {{/each}}
            <br>
            <br>
            <button type="submit" value="submit">Submit</button>
        </div>
    </form>

    <div class="clsContent">
        {{#if selected}}
        <img src="/images/{{selected}}.jpg" alt="No Image" />
        {{else}}
        <img src="/images/home.jpg" alt="No Image" />
        {{/if}}
    </div>

    <div class="clsImageName">
        {{#if selected}}
        {{selected}}
        {{else}}
        Home
        {{/if}}
    </div>
</body>

</html>